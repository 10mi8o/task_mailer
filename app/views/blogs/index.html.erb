<h1>Blog一覧</h1>
<div><%= notice %></div>
<table class="table">
  <tr>
    <th>ブログタイトル</th>
    <th>内容</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

  <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%=link_to '詳細を確認する', blog_path(blog.id) %></td>
    <% if blog.user_id == current_user.id %>
    <td><%= link_to'ブログを編集する', edit_blog_path(blog.id), data: { confirm: '編集しますか？'} %></td>
    <td><%= link_to'ブログを削除する', blog_path(blog.id),method: :delete, data:{confirm: '本当に削除しますか？'} %></td>
    <% end %>
  </tr>
  <% end %>

</table>


<%= link_to'ブログ作成画面にもどる',new_blog_path, { :class => "btn btn-default" } %>
